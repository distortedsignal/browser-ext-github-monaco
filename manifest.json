{
	"manifest_version": 2,
	"name": "Monaco Markdown Editor For GitHub",
	"version": "0.4.3",

	"description": "Monaco Editor for Gists, GitHub and Enterprise GitHub!",
	"icons": {
		"128": "logo.drawio.png"
	},

	"content_scripts": [
		{
			"matches": [
				"https://github.com/*",
				"https://gist.github.com/*",
				"https://github.*.*/*",
				"https://gist.github.*.*/*"
			],
			"js": ["/dist/content-script.js"],
			"run_at": "document_end"
		}
	],
	"permissions": [
		"https://github.com/*",
		"https://gist.github.com/*",
		"https://github.*.*/*",
		"https://gist.github.*.*/*"
	],
	"web_accessible_resources": ["dist/*"]
}
